<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/imageview_data"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/zz_flags_back"
        android:padding="10dp"
        android:src="@drawable/zz_flag" />


    <ImageView
        android:id="@+id/image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignEnd="@+id/imageview_data"
        android:elevation="2dp"
        android:padding="10dp"
        android:src="@drawable/zz_select_green"
       />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageview_data"
        android:layout_alignStart="@+id/imageview_data"
        android:layout_alignEnd="@+id/imageview_data"
        android:text="CANADA"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textStyle="bold" />

</RelativeLayout>