<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/image23"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:background="@drawable/zz_back_button"
                android:padding="10dp"
                android:src="@drawable/ic_arrow_left" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_toStartOf="@+id/image25"
                android:layout_toEndOf="@+id/image23"
                android:background="@drawable/shape_edit_text"
                android:gravity="center">

                <EditText
                    android:id="@+id/textview1"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginStart="10dp"
                    android:layout_toStartOf="@+id/image"
                    android:fontFamily="@font/manrope_extra_bold"
                    android:gravity="center_vertical"
                    android:text="What are you looking for?"
                    android:textColor="#162534"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="5dp"
                    android:padding="10dp"
                    android:src="@drawable/ic_search" />



            </RelativeLayout>


            <ImageView
                android:id="@+id/image25"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="20dp"
                android:src="@drawable/zz_person_home" />


        </RelativeLayout>

    </androidx.appcompat.widget.Toolbar>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="10dp"
        android:background="#E8E9EB" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/manrope_extra_bold"
                android:text="Live Now"
                android:textColor="#45515D"
                android:textSize="24sp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                app:cardCornerRadius="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="250dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:src="@drawable/zz_main_image" />


                    <Button
                        android:id="@+id/button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="20dp"
                        android:layout_marginBottom="30dp"
                        android:background="@drawable/shape_join_now"
                        android:fontFamily="@font/manrope_semi_bold"
                        android:paddingStart="40dp"
                        android:paddingTop="10dp"
                        android:paddingEnd="40dp"
                        android:paddingBottom="10dp"
                        android:text="Join Now"
                        android:textColor="#2A3C4A"
                        android:textSize="12sp"

                        />

                    <TextView
                        android:id="@+id/textdummy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/button"
                        android:layout_marginStart="20dp"
                        android:layout_marginBottom="5dp"
                        android:fontFamily="@font/manrope_extra_bold"
                        android:text="dummyu text"
                        android:textColor="#FFFFFF"
                        android:textSize="24sp" />

                    <TextView
                        android:id="@+id/textdummy1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/textdummy"
                        android:layout_marginStart="20dp"
                        android:layout_marginBottom="5dp"
                        android:fontFamily="@font/manrope_extra_bold"
                        android:text="Loprem Ispum is"
                        android:textColor="#FFFFFF"
                        android:textSize="24sp" />

                    <TextView
                        android:id="@+id/textdummy2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/textdummy1"
                        android:layout_marginStart="20dp"
                        android:layout_marginBottom="5dp"
                        android:fontFamily="@font/manrope_medium"
                        android:text="IELTS"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp" />


                </RelativeLayout>
            </androidx.cardview.widget.CardView>


            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:background="#E8E9EB" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/manrope_extra_bold"
                android:text="Upcoming"
                android:textColor="#45515D"
                android:textSize="24sp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recylerview_upcoming"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/recyclerview_upcoming" />


            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:background="#E8E9EB" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/manrope_extra_bold"
                android:text="IELTS Prep"
                android:textColor="#45515D"
                android:textSize="24sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:elevation="0dp"
                    app:cardCornerRadius="10dp">

                    <RelativeLayout
                        android:id="@+id/writing"
                        android:layout_width="150dp"
                        android:layout_height="150dp">


                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/shape_ieltsprep_writing" />

                        <TextView
                            android:id="@+id/text1111"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginStart="20dp"
                            android:layout_marginBottom="30dp"
                            android:fontFamily="@font/manrope_medium"
                            android:text="200 videos"
                            android:textColor="#45515D"
                            android:textSize="14dp"

                            />

                        <TextView
                            android:id="@+id/text2222"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_above="@+id/text1111"
                            android:layout_marginStart="20dp"
                            android:layout_marginBottom="5dp"
                            android:fontFamily="@font/manrope_bold"
                            android:text="Writing"
                            android:textColor="#7D6BD9"
                            android:textSize="24sp"

                            />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_above="@+id/text2222"
                            android:layout_marginStart="20dp"
                            android:layout_marginBottom="5dp"
                            android:src="@drawable/ic_writing"
                             />


                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:elevation="0dp"
                    app:cardCornerRadius="10dp">

                    <RelativeLayout
                        android:id="@+id/speaking"
                        android:layout_width="150dp"
                        android:layout_height="150dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/shape_ieltsprep_speaking" />


                        <TextView
                            android:id="@+id/text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginStart="20dp"
                            android:layout_marginBottom="30dp"
                            android:fontFamily="@font/manrope_medium"
                            android:text="200 videos"
                            android:textColor="#45515D"
                            android:textSize="14dp"

                            />

                        <TextView
                            android:id="@+id/text2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_above="@+id/text"
                            android:layout_marginStart="20dp"
                            android:layout_marginBottom="5dp"
                            android:fontFamily="@font/manrope_bold"
                            android:text="Speaking"
                            android:textColor="#32CFB3"
                            android:textSize="25dp"

                            />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_above="@+id/text2"
                            android:layout_marginStart="20dp"
                            android:layout_marginBottom="5dp"
                            android:src="@drawable/ic_mic"
                           />


                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:elevation="0dp"
                    android:layout_marginBottom="20dp"
                    app:cardCornerRadius="10dp">

                    <RelativeLayout
                        android:id="@+id/reading"
                        android:layout_width="150dp"
                        android:layout_height="150dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/shape_ieltsprep_reading" />


                        <TextView
                            android:id="@+id/text11"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginStart="20dp"
                            android:layout_marginBottom="30dp"
                            android:fontFamily="@font/manrope_medium"
                            android:text="200 videos"
                            android:textColor="#45515D"
                            android:textSize="14dp"

                            />

                        <TextView
                            android:id="@+id/text22"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_above="@+id/text11"
                            android:layout_marginStart="20dp"
                            android:layout_marginBottom="5dp"
                            android:fontFamily="@font/manrope_bold"
                            android:text="Reading"
                            android:textColor="#FF7D61"
                            android:textSize="25dp"

                            />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_above="@+id/text22"
                            android:layout_marginStart="20dp"
                            android:layout_marginBottom="5dp"
                            android:src="@drawable/ic_reading"
                             />


                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:elevation="0dp"
                    android:layout_marginBottom="20dp"
                    app:cardCornerRadius="10dp">

                    <RelativeLayout
                        android:id="@+id/listening"
                        android:layout_width="150dp"
                        android:layout_height="150dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/shape_ieltsprep_listening" />


                        <TextView
                            android:id="@+id/text111"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginStart="20dp"
                            android:layout_marginBottom="30dp"
                            android:fontFamily="@font/manrope_medium"
                            android:text="200 videos"
                            android:textColor="#45515D"
                            android:textSize="14dp"

                            />

                        <TextView
                            android:id="@+id/text222"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_above="@+id/text111"
                            android:layout_marginStart="20dp"
                            android:layout_marginBottom="5dp"
                            android:fontFamily="@font/manrope_bold"
                            android:text="Listening"
                            android:textColor="#95646D"
                            android:textSize="25dp"

                            />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_above="@+id/text222"
                            android:layout_marginStart="20dp"
                            android:layout_marginBottom="5dp"
                            android:src="@drawable/ic_listening"
                          />


                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:background="#E8E9EB" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/manrope_extra_bold"
                android:text="Latest Blogs"
                android:textColor="#45515D"
                android:textSize="24sp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recylerview_latest_blogs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/recylerview_latest_blogs" />


        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>