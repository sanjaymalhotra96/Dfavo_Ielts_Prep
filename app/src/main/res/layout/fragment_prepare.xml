<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/image23"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:background="@drawable/zz_back_button"
                android:padding="10dp"
                android:src="@drawable/ic_menu_icon"
              />

            <TextView
                android:id="@+id/textdummy1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:fontFamily="@font/manrope_extra_bold"
                android:text="Prepare"
                android:textAlignment="center"
                android:textColor="#162534"
                android:textSize="24sp" />



        </RelativeLayout>

    </androidx.appcompat.widget.Toolbar>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="10dp"
        android:background="#E8E9EB" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:text="All Modules"
                android:textSize="24sp"
                android:textColor="#45515D"
                android:fontFamily="@font/manrope_extra_bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:elevation="0dp"
                    app:cardCornerRadius="10dp">

                    <RelativeLayout
                        android:id="@+id/writing"
                        android:layout_width="150dp"
                        android:layout_height="150dp">


                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/shape_ieltsprep_writing" />

                        <TextView
                            android:id="@+id/text1111"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginStart="20dp"
                            android:layout_marginBottom="30dp"
                            android:fontFamily="@font/manrope_medium"
                            android:text="200 videos"
                            android:textColor="#45515D"
                            android:textSize="14dp"

                            />

                        <TextView
                            android:id="@+id/text2222"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_above="@+id/text1111"
                            android:layout_marginStart="20dp"
                            android:layout_marginBottom="5dp"
                            android:fontFamily="@font/manrope_bold"
                            android:text="Writing"
                            android:textColor="#7D6BD9"
                            android:textSize="24sp"

                            />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_above="@+id/text2222"
                            android:layout_marginStart="20dp"
                            android:layout_marginBottom="5dp"
                            android:src="@drawable/ic_writing"
                            />


                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:elevation="0dp"
                    app:cardCornerRadius="10dp">

                    <RelativeLayout
                        android:id="@+id/speaking"
                        android:layout_width="150dp"
                        android:layout_height="150dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/shape_ieltsprep_speaking" />


                        <TextView
                            android:id="@+id/text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginStart="20dp"
                            android:layout_marginBottom="30dp"
                            android:fontFamily="@font/manrope_medium"
                            android:text="200 videos"
                            android:textColor="#45515D"
                            android:textSize="14dp"

                            />

                        <TextView
                            android:id="@+id/text2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_above="@+id/text"
                            android:layout_marginStart="20dp"
                            android:layout_marginBottom="5dp"
                            android:fontFamily="@font/manrope_bold"
                            android:text="Speaking"
                            android:textColor="#32CFB3"
                            android:textSize="25dp"

                            />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_above="@+id/text2"
                            android:layout_marginStart="20dp"
                            android:layout_marginBottom="5dp"
                            android:src="@drawable/ic_mic"
                            />


                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:elevation="0dp"
                    android:layout_marginBottom="20dp"
                    app:cardCornerRadius="10dp">

                    <RelativeLayout
                        android:id="@+id/reading"
                        android:layout_width="150dp"
                        android:layout_height="150dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/shape_ieltsprep_reading" />


                        <TextView
                            android:id="@+id/text11"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginStart="20dp"
                            android:layout_marginBottom="30dp"
                            android:fontFamily="@font/manrope_medium"
                            android:text="200 videos"
                            android:textColor="#45515D"
                            android:textSize="14dp"

                            />

                        <TextView
                            android:id="@+id/text22"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_above="@+id/text11"
                            android:layout_marginStart="20dp"
                            android:layout_marginBottom="5dp"
                            android:fontFamily="@font/manrope_bold"
                            android:text="Reading"
                            android:textColor="#FF7D61"
                            android:textSize="25dp"

                            />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_above="@+id/text22"
                            android:layout_marginStart="20dp"
                            android:layout_marginBottom="5dp"
                            android:src="@drawable/ic_reading"
                            />


                    </RelativeLayout>
                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:elevation="0dp"
                    android:layout_marginBottom="20dp"
                    app:cardCornerRadius="10dp">

                    <RelativeLayout
                        android:id="@+id/listening"
                        android:layout_width="150dp"
                        android:layout_height="150dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/shape_ieltsprep_listening" />


                        <TextView
                            android:id="@+id/text111"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginStart="20dp"
                            android:layout_marginBottom="30dp"
                            android:fontFamily="@font/manrope_medium"
                            android:text="200 videos"
                            android:textColor="#45515D"
                            android:textSize="14dp"

                            />

                        <TextView
                            android:id="@+id/text222"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_above="@+id/text111"
                            android:layout_marginStart="20dp"
                            android:layout_marginBottom="5dp"
                            android:fontFamily="@font/manrope_bold"
                            android:text="Listening"
                            android:textColor="#95646D"
                            android:textSize="25dp"

                            />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_above="@+id/text222"
                            android:layout_marginStart="20dp"
                            android:layout_marginBottom="5dp"
                            android:src="@drawable/ic_listening"
                            />


                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recylerview_prepare"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                tools:listitem="@layout/recylerview_prepare"
                />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

        </LinearLayout>