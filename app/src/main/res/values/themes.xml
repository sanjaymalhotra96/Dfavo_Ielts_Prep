<resources xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android">
    <!--splash-->
    <style name="Splash" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor">@color/blank</item>
        <item name="android:windowBackground">@drawable/splash_layer_list</item>
    </style>

    <!--on boarding-->
    <style name="OnBoard" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/white</item>

        <item name="android:statusBarColor">@color/white</item>
        <item name="android:navigationBarColor">@color/navigationBarBackgroundColor</item>
    </style>

    <!--base theme-->
    <style name="Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">#344955</item>

        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:navigationBarColor">@color/navigationBarBackgroundColor</item>
    </style>

    <!--reading-->
    <style name="ReadingActivity" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:navigationBarColor" tools:targetApi="lollipop">
            @color/navigationBarBackgroundColor
        </item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">false</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLayoutInDisplayCutoutMode" tools:targetApi="o_mr1">shortEdges
        </item>
        <item name="windowActionBar">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowNoTitle">true</item>
    </style>


    <!--writing-->
    <style name="WritingActivity" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">#344955</item>

        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:navigationBarColor">@color/navigationBarBackgroundColor</item>
    </style>

    <!--speaking-->
    <style name="SpeakingActivity" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">#344955</item>

        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:navigationBarColor">@color/navigationBarBackgroundColor</item>
    </style>

    <!--listening-->
    <style name="ListeningActivity" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">#344955</item>

        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:navigationBarColor">@color/navigationBarBackgroundColor</item>
    </style>

    <!--instruction-->
    <style name="InstructionActivity" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">#344955</item>

        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:navigationBarColor">@color/navigationBarBackgroundColor</item>
    </style>
    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">#7B61FF</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#f1f1f1
        </item>



        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#42221f1f
        </item>
    </style>

    <!--toolbar-->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>